<div class="container">
  <header>
    <h1>Eat the Burger!!</h1>
  </header>
  {{!-- left column --}}
  <section class="row">
    <div class="col-sm-12 col-md-4 well">
      <h2>Eat these Burgers</h2>
      {{#each burgers}}
        {{#unless devoured}}    
          <ul>
            <li>
              <h3>{{ this.id }} {{ this.burger_name }}</h3>
              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class="btn btn-danger" id="devoured">Devour it!</button>
              </form>
            </li>
          </ul>
        {{/unless}}    
      {{/each}}
    </div>

    {{!-- center column --}}
    <div class="col-sm-12 col-md-4 well" id="center_column">
      <h2>Add a Burger</h2>
      <img src="public/assets/img/burger.png">
      {{!-- form --}}
      <form class="create-update-form" action="burgers/insert" method="POST">
        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name">
        </div>
        <button type="submit" class="btn btn-success">Add Burger</button>
      </form>
    </div>

    {{!-- Right column (devoured burgers) --}}
    <div class="col-sm-12 col-md-4 well">
      <h2>Devoured Burgers</h2>
      {{#each burgers}}
        {{#if devoured}}
          <ul>
            <li id="devoured">
              <h3>{{ this.id }} {{ this.burger_name }}</h3>
            </li>
          </ul>
        {{/if}}
      {{/each}}
    </div>
  </section>
</div>